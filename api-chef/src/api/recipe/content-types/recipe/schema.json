{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe",
    "description": "Recipes for cooking"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "outcome_unit": {
      "type": "enumeration",
      "enum": [
        "gram",
        "portion",
        "piece"
      ],
      "required": true
    },
    "outcome_amount": {
      "type": "decimal",
      "required": true
    },
    "taxTemplateName": {
      "type": "string"
    },
    "tags": {
      "type": "json"
    },
    "color": {
      "type": "string"
    },
    "priceModifiers": {
      "type": "json"
    },
    "uuid": {
      "type": "string",
      "unique": true
    },
    "cloud_uuid": {
      "type": "string",
      "unique": true
    },
    "syncedAt": {
      "type": "datetime"
    },
    "dirtyToSync": {
      "type": "boolean",
      "default": false
    },
    "category_id": {
      "type": "string"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
} 